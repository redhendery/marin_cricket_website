<%= form_with model: @user do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="columns">
    <div class="column">

      <div class="field">
        <%= f.label :first_name, class: 'label' %>
        <%= f.text_field :first_name, required: true,
            class: 'input', type: 'text', placeholder: 'Your Frist Name' %>
      </div>

      <div class="field">
        <%= f.label :last_name, class: 'label' %>
        <%= f.text_field :last_name, required: true,
            class: 'input', type: 'text', placeholder: 'Your Last Name' %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, required: true, class: 'input',
              type: 'email', placeholder: 'Your Email Address' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, class: 'input',
              type: 'password', placeholder: 'Choose a Password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, class: 'input',
              type: 'password', placeholder: 'Confirm Your Password' %>
      </div>
    </div>

    <% unless current_page?(signup_url) %>
      <div class="column is-offset-2">
        <div class="field">
          <%= f.label :role, class: 'label' %>
          <div class="select">
            <%= f.select :role, ['Batsmen', 'Bowler', 'Wicket Keeper', 'All Rounder'] %>
          </div>
        </div>

        <div class="field">
          <%= f.label :batting_hand, class: 'label' %>
          <div class="select">
            <%= f.select :bats, ['Left', 'Right'] %>
          </div>
        </div>

        <div class="field">
          <%= f.label :bowling_hand, class: 'label' %>
          <div class="select">
            <%= f.select :bowls, ['Left', 'Right'] %>
          </div>
        </div>

        <div class="field">
          <%= f.label :profile, class: 'label' %>
          <%= f.text_area :profile, rows: 7, cols: 40, class: 'textarea',
                            placeholder: 'Tell us a little about yourself or leave this field blank.' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.submit yield(:button_text), class: 'button is-medium is-link is-fullwidth' %>
  </div>
<% end %>
