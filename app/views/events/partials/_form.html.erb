<%= form_with model: @event, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="columns is-5">
    <div class="column">
      <div class="field">
        <%= f.label :title, class: 'label' %>
        <%= f.text_field :title, required: true,
            class: 'input', type: 'text', placeholder: 'Event Name' %>
      </div>

      <div class="field">
        <%= f.label :location, class: 'label' %>
        <%= f.text_field :location, required: true,
            class: 'input', type: 'text', placeholder: 'Event Location' %>
      </div>

      <div class="field">
        <%= f.label :date, class: 'label' %>
        <%= f.date_field :date, required: true, class: 'input',
                          type: 'date', placeholder: 'Event Date' %>
      </div>

      <div class="columns">
        <div class="column is-half">
          <div class="field">
            <%= f.label :start_time, class: 'label' %>
            <%= f.time_field :start_time, required: true, class: 'input',
                              type: 'time', placeholder: 'Event Start Time' %>
          </div>
        </div>
        <div class="column is-half"> 
          <div class="field">
            <%= f.label :end_time, class: 'label' %>
            <%= f.time_field :end_time, required: false, class: 'input',
                              type: 'time', placeholder: 'Event End Time' %>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-offset-2">
      <div class="field">
        <%= f.label :about, class: 'label' %>
        <%= f.text_area :about, rows: 11, cols: 40, class: 'textarea',
                          placeholder: 'A short blurb about the Team.' %>
      </div>
    </div>
  </div>

  <div>
    <%= f.submit yield(:button_text), class: 'button is-medium is-link is-fullwidth' %>
  </div>

<% end %>

