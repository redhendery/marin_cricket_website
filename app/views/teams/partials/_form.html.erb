<%= form_with model: @team, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="columns">
    <div class="column is-5">

      <div class="field">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, class: 'input', required: true, type: 'text',
                            placeholder: 'The Team Name. e.g: Marin Socials' %>
      </div>

      <div class="field">
        <%= f.label :abbreviation, class: 'label' %>
        <%= f.text_field :abbreviation, class: 'input', required: true, type: 'text',
                            placeholder: 'The Team Name Abbreviation. e.g: MNS' %>
      </div>

      <div class="field">
        <%= f.label :home_field, class: 'label' %>
        <%= f.text_field :home_field, class: 'input', required: true, type: 'text',
                            placeholder: "The Name of the Team's Home Field. e.g: Piper Park, Larkspur" %>
      </div>
    </div>

    <div class="column is-offset-2">
      <div class="field">
        <%= f.label :about, class: 'label' %>
        <%= f.text_area :about, rows: 8, cols: 40, class: 'textarea',
                          placeholder: 'A short blurb about the Team.' %>
      </div>
    </div>
  </div>

  <div class="column">
    <div class="field">
      <%= f.submit yield(:button_text), class: 'button is-medium is-link is-fullwidth'%>
    </div>
  </div>
<% end %>
