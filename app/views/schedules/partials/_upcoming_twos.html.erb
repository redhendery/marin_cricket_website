<% @mnt_next.each do |mnt| %>
  <div class="card no-padding">
    <header class="card-header">
      <h6 class="card-header-title is-centered">
        Marin Two (MNT)
      </h6>
    </header>
    <div class="card-content">
      <div class="content">
        <p class="subtitle is-5 has-text-weight-bold has-text-centered">
          <%= mnt.home_team.name %>
          vs
          <%= mnt.away_team.name %>
        </p>
        <p class="negative-margin">
          <span class="has-text-weight-bold">Where: </span>
          <%= mnt.home_team.home_field %>,
          <%= link_to 'Directions', "https://www.google.com/maps?q=#{mnt.home_team.home_field}", target: 'blank' %>
        </p>
        <p style="margin-top:-18px;">
          <span class="has-text-weight-bold">When: </span>
          <%= mnt.date.strftime('%A, %d %B') %>
        </p>
        <p style="margin-top:-18px;">
          <span class="has-text-weight-bold">Time: </span>
          11:00am
        </p>
      </div>
    </div>
    <footer class="card-footer">
       <%= link_to 'Game Details', schedule_path(mnt), class: 'card-footer-item has-text-weight-bold' %>
    </footer>
    <% if admin_logged_in? %>
      <footer class="card-footer">

            <%= link_to 'Edit Game', edit_schedule_path(mnt),
                                  class: 'button is-medium is-warning card-footer-item' %>

            <%= link_to 'Delete Game', mnt, method: :delete,
                      data: { confirm: 'You sure brah? This game will be PERMANENTLY DELETED from the database.'},
                                  class: 'button is-medium is-danger card-footer-item' %>
      </footer>
    <% end %>
  </div>
<% end %>
