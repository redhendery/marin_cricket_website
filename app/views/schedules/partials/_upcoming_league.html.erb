<% @league.each do |mnc| %>
  <div class="card no-padding">
    <header class="card-header">
      <h6 class="card-header-title is-centered">
        Marin CC NCCA (MNC)
      </h6>
    </header>
    <div class="card-content">
      <div class="content">
        <p class="subtitle is-5 has-text-weight-bold has-text-centered">
          <%= mnc.home_team.name %>
          vs
          <%= mnc.away_team.name %>
        </p>
        <p class="negative-margin">
          <span class="has-text-weight-bold">Where: </span>
          <%= mnc.home_team.home_field %>,
          <%= link_to 'Directions', "https://www.google.com/maps?q=#{mnc.home_team.home_field}", target: 'blank' %>
        </p>
        <p style="margin-top:-18px;">
          <span class="has-text-weight-bold">When: </span>
          <%= mnc.date.strftime('%A, %d %B') %>
        </p>
        <p style="margin-top:-18px;">
          <span class="has-text-weight-bold">Time: </span>
          <%= mnc.start_time.strftime('%H:%M %P') %>
        </p>
      </div>
    </div>
    <footer class="card-footer">
       <%= link_to 'Game Details', schedule_path(mnc), class: 'card-footer-item has-text-weight-bold' %>
    </footer>
    <% if admin_logged_in? %>
      <footer class="card-footer buttons are-medium">
        <%= link_to 'Edit Game', edit_schedule_path(mnc),
                  class: 'button is-warning card-footer-item' %>
        <%= link_to 'Set Lineup', selection_schedule_path(mnc), class:
                                      'button is-info card-footer-item' %>
        <%= button_to 'Delete Game', mnc, method: :delete,
            data: { confirm: 'You sure brah? This game will be PERMANENTLY DELETED from the database.'},
                              class: 'button is-danger card-footer-item' %>
      </footer>
    <% end %>
  </div>
<% end %>
