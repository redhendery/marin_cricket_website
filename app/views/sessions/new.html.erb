<%= provide(:title, 'Log In') %>

<h1 class="title is-1">Log In</h1>

<div class="columns is-centered">
  <div class="column is-5">
    <%= form_with scope: :session, url: login_path do |f| %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, class: 'input',
              type: 'email', placeholder: 'Enter Your Email Address' %>
      </div>

      <div class="field is-grouped">
        <%= f.label :password, class: 'label', style: 'padding-right:15px;' %>
        <%= link_to '(Forgot Your Password?)', new_password_reset_path %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: 'input',
              type: 'password', placeholder: 'Enter Your Password', style: 'margin-top:-7px;' %>
      </div>

      <div class="field">
        <%= f.label :remember_me, class: 'checkbox' do %>
        <%= f.check_box :remember_me %>
          <span class="has-text-weight-medium" style="padding-left:7px;">Remember me on this device</span>
          <br>
        <% end %>
      </div>

      <div class="field">
        <%= f.submit 'Log In', class: 'button is-medium is-link is-fullwidth' %>
      </div>

    <% end %>
    <br>
    <p class="is-size-5" style="margin-top:-12px;">Not a member? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
