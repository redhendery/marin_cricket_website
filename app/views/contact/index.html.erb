<% provide(:title, 'Contact Us') %>

<h1 class="title is-1">Contact Marin Cricket Club</h1>

<div class="columns is-centered">
  <div class="column is-5">
    <%= form_for @contact, url: contact_index_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="field">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, required: true, class: 'input',
                        type: 'text', placeholder: 'Your Name' %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, required: true, class: 'input',
                    type: 'email', placeholder: 'Your Email Address' %>
      </div>

      <div class="field">
        <%= f.label :phone_number, class: 'label' %>
        <%= f.number_field :phone, required: true, class: 'input',
                    type: 'tel', placeholder: 'Your Phone Number' %>
      </div>

      <div class="field">
        <%= f.label :message, class: 'label' %>
        <%= f.text_area :message, rows: 8, cols: 40, required: true, class: 'textarea',
                                  placeholder: 'Your message for the Marin Cricket Club' %>
      </div>

      <div class="field">
        <%= f.submit 'Send Message', class: 'button is-medium is-link is-fullwidth' %>
      </div>

    <% end %>
    <br>
    <p>
      The Marin Cricket Club website does not collect or store
      your email address and phone number if you complete this form. 
      But they will use one or both of them to contact you.
    </p>
  </div>
</div>
