<%= provide(:title, 'Newsletter Removal') %>

<h1 class="title is-1">Mailing List Removal</h1>

<div class="columns is-centered">
  <div class="column is-5">
    <%= form_with url: newsletters_url, method: :delete, local: true do |f| %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, class: 'input', type: 'email', placeholder: 'Enter Your Email Address' %>
      </div>

      <div class="field">
        <%= f.submit 'Remove From Mailing List', class: 'button is-medium is-link is-fullwidth' %>
      </div>
    <% end %>
  </div>
</div>
